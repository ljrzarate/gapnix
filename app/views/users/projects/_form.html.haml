.box.box-primary
  .box-header.with-border
    %h1.box-title
      = "#{project.new_record? ? 'New' : 'Edit'} Project"

    = form_for project, url: url, method: method, html: {class: "form-horizontal center", role: "form"} do |form|
      .box-body
        .form-group.col-md-12
          = form.label :name, "Project:"
          = form.text_field :name, class: "form-control"
        .form-group.col-md-12
          = form.label :description, "Description:"
          = form.text_area :description, size: "60x12", class: "form-control"
        .form-group.col-md-12
          = form.submit I18n.t("save_entity"), class: "btn btn-success btn-lg pull-right"
